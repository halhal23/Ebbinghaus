<% @page_title = "password-edit" %>

<h2 style="text-align: center;">パスワード編集</h2>

<div class="form-wrapper">  
  <%= form_for @user, as: :account, url: :password do |f| %>
    <div class="form-group">
      <%= f.password_field :current_password, class: "form-control text-input", placeholder: "現在のパスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, class: "form-control text-input", placeholder: "新しいパスワード" %>
    </div>
    <div class="form-group">
      <%= f.password_field :passowrd_confirmation, class: "form-control text-input", placeholder: "新しいパスワード" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-outline-primary" %>
  <% end %>
</div>

