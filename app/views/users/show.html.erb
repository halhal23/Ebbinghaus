<h1><%= @user.name %></h1>
<p><%= @user.email %></p>
<p>開始日時: <%= @user.created_at.strftime("%Y/%m/%d %H:%M") %></p>

<%= link_to "Edit", edit_user_path(@user), class: "btn btn-outline-warning" %>
<%= link_to "Delete",
    @user,
    method: :delete,
    class: "ml-5 btn btn-outline-danger",
    data: { confirm: "本当に削除しますか？" } %>